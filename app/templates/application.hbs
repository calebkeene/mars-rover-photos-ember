<h3>Mars Rovers</h3>
{{!-- {{rover-selector roverNames=displayableRoverNames}} --}}
<select onchange={{action 'setCurrentRover' value='target.value'}}>
 <option disabled selected>ROVER</option>
 		{{#each displayableRoverNames as |roverName|}}
 			<option value={{roverName}}>{{roverName}}</option>
 		{{/each}}
</select>

{{!-- <p>Selected rover name: {{selectedRoverName}}</p> --}}
{{#if showRover }}
	<table>
		<tr>
			<th>Landing date</th>
			<th>Launch date</th>
			<th>status</th>
			<th>max sol</th>
			<th>max date</th>
			<th>total photos</th>
		</tr>
		<tr>
			<td>{{currentRover.landingDate}}</td>
			<td>{{currentRover.launchDate}}</td>
			<td>{{currentRover.status}}</td>
			<td>{{currentRover.maxSol}}</td>
			<td>{{currentRover.maxDate}}</td>
			<td>{{currentRover.totalPhotos}}</td>
		</tr>
	</table>
{{/if}}

{{#if showRover }}
	<h3>Cameras</h3>
	<select onchange={{action 'setCurrentCamera' value='target.value'}}>
		{{#each currentRover.cameras as |camera|}}
			<option>{{camera.name}}</option>
			{{!-- <option>{{camera.full_name}}</option> --}}
		{{/each}}
	</select>
	<p>current camera: {{currentCamera.fullName}}</p>
	<h3>Date</h3>
	{{date-picker date=currentDate valueFormat='YYYY-MM-DD' yearRange=datePickerYearRange}}
{{/if}}

{{outlet}}